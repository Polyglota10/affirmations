  const categorySelect = document.getElementById("categorySelect");
  const textEl = document.getElementById("affirmationText");
  const buttonEl = document.getElementById("nextStarBtn");

  let currentCategory = "selfWorth";
  let deck = [];
  let index = 0;

  function shuffleDeck(category) {
    const list = CATEGORIES[category] || [];
    deck = [...list];

    for (let i = deck.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [deck[i], deck[j]] = [deck[j], deck[i]];
    }

    index = 0;
  }

  function showNext() {
    if (!deck.length) {
      textEl.classList.remove("show");
      setTimeout(() => {
        textEl.textContent = "No affirmations loaded for this category.";
        textEl.classList.add("show");
      }, 20);
      return;
    }

    if (index >= deck.length) {
      shuffleDeck(currentCategory);
    }

    const text = deck[index];
    index++;

    textEl.classList.remove("show");
    setTimeout(() => {
      textEl.textContent = text;
      textEl.classList.add("show");
    }, 20);
  }

  // Handle category change
  categorySelect.addEventListener("change", () => {
    currentCategory = categorySelect.value;
    shuffleDeck(currentCategory);

    textEl.classList.remove("show");
    setTimeout(() => {
      const label = categorySelect.options[categorySelect.selectedIndex].text;
      textEl.textContent = `Click the star to receive an affirmation for: ${label}. ‚ú®`;
      textEl.classList.add("show");
    }, 20);
  });

  // Button click
  buttonEl.addEventListener("click", showNext);

  // Initial state
  shuffleDeck(currentCategory);
  textEl.textContent = "Click the star to receive an affirmation for: Self-worth & Lovability. ‚ú®";
  textEl.classList.add("show");
</script>

